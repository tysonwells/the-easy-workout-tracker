<%- include('../partials/nav') %>

<link rel='stylesheet' href='/stylesheets/style.css' />
<h1><%= exercise.name %> </h1>
<section>
<form action="/exercises/<%= exercise._id %>?_method=PUT" method="POST">
  <label>
    Sets:
    <input type="text" name="set" value=" <%= exercise.set %> ">
  </label>
  <label>
    Reps:
    <input type="text" name="reps" value=" <%= exercise.reps %> ">
  </label>
  <label>
    Weight:
    <input type="text" name="weight" value=" <%= exercise.weight %> ">
  </label>
  <button type="submit">Edit 🏋🏾</button>
</form>
</section>

