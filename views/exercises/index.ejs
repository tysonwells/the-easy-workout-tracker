<%- include('../partials/html-head') %>

<link rel="stylesheet" href="/stylesheets/exercises/index.css">

<%- include('../partials/nav') %>

<main>
  <h1>Exercises</h1>
  <% if (user) { %>
  <% } %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Sets</th>
          <th>Weight</th>
        </tr>
     </thead>
     <tbody>
      <% exercises.forEach(exercise => { %>
        <tr>
          <td><a href="/exercises/<%= exercise._id %> "><%= exercise.name %></a>  </td>
          <td><%= exercise.set %> </td>
          <td><%= exercise.weight %> </td>        
        </tr>
      <% }) %>
    </tbody>
  </table>
</main>

<%- include('../partials/footer') %>