<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <% if (profile.avatar) { %>
    <div>
      <img 
        class="profile-avatar"
        src="<%= profile.avatar %>" 
        alt="<%= profile.name %> avatar"
      >
    </div>
  <% } %>
  <h1>It's <%= isSelf ? "you" : profile.name %>!</h1>
  <% if (isSelf) { %>
    <h2>Add Workout</h2>
    <form action="/profiles/<%= profile._id %>/workouts" method="POST">       
      <input type="text" name="name" placeholder='Name 'autocomplete="off">
      <select name="category">
        <option value="Back Workout">Back Workout</option>
        <option value="Leg Workout">Leg Workout</option>
        <option value="Arm Workout">Arm Workout</option>                    
      </select>
      <input type="datetime-local" name="day">     
      <button type="submit">Add Workout</button>
    </form> 
    <section>
      <ul>
        <% profile.workouts.forEach(workout => { %>
          <a href="/profiles/<%= profile._id %>/workouts/<%= workout._id %> ">
            <li><%= workout.name %></li>
              <form action="/profiles/<%= profile._id %>/workouts/<%= workout._id %>?_method=DELETE" method="POST">
                <button>DELETE</button>
              </form>      
            
          </a>
      <% }) %>
    </ul>
    </section> 
  <% } %>
</main>

<%- include('../partials/footer') %>