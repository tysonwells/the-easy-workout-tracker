<%- include('../partials/html-head') %>

<link rel="stylesheet" href="/stylesheets/main.css">

<%- include('../partials/nav') %>

<main>

  
  <h1>Let's Go <%= isSelf ? profile.name : profile.name %>!</h1>
  <% if (isSelf) { %>
    <h2>Add Workout</h2>
    <form action="/profiles/<%= profile._id %>/workouts" method="POST">       
      <input type="text" name="name" placeholder='Name 'autocomplete="off">
      <select name="category">
        <option value="Back Workout">Back Workout</option>
        <option value="Leg Workout">Leg Workout</option>
        <option value="Arm Workout">Arm Workout</option>                    
      </select>
      <input type="date" name="day">     
      <button type="submit">Add Workout</button>
    </form> 
    <section>
      <table>
        <thead>
          <tr>
            <th>Workout</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
        <% profile.workouts.forEach(workout => { %>
          <tr>
          <td><a href="/profiles/<%= profile._id %>/workouts/<%= workout._id %> "><button><%= workout.name %></button></a></td>
          
              <td><form action="/profiles/<%= profile._id %>/workouts/<%= workout._id %>?_method=DELETE" method="POST">
                <button>X</button>
              </form> </td>              
        </tr>
          <% }) %>
        </tbody>
    </table>
    </section> 
  <% } %>
</main>

<%- include('../partials/footer') %>